<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PBL6"
        android:usesCleartextTraffic="true"
        tools:targetApi="33">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:screenOrientation="portrait"
            android:exported="false">

        </activity>
        <activity
            android:name=".ui.signin.SignInActivity"
            android:screenOrientation="portrait"
            android:exported="false">

        </activity>
        <activity
            android:name=".ui.forgot_password.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:exported="false">

        </activity>
        <activity
            android:name=".ui.verify_email.VerifyEmailActivity"
            android:screenOrientation="portrait"
            android:exported="false">

        </activity>
        <activity
            android:name=".ui.new_password.NewPasswordActivity"
            android:screenOrientation="portrait"
            android:exported="false">

        </activity>
        <activity
            android:name=".ui.main.HomeMainActivity"
            android:screenOrientation="portrait"
            android:exported="false">

        </activity>
        <activity
            android:name=".ui.upload.UploadActivity"
            android:screenOrientation="portrait"
            android:exported="false">

        </activity>
        <activity
            android:name=".ui.course.CourseDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false">

        </activity>
    </application>

</manifest>
