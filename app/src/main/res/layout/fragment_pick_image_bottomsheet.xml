<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_float">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_take_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="@dimen/dimen_12dp"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dimen_20dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:text="@string/take_picture"
            android:textColor="@color/black_100"
            app:drawableLeftCompat="@drawable/ic_camera" />

        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="@dimen/dimen_12dp"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dimen_20dp"
            android:paddingVertical="@dimen/dimen_20dp"
            android:text="@string/select_from_gallery"
            android:textColor="@color/black_100"
            app:drawableLeftCompat="@drawable/ic_gallery" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
