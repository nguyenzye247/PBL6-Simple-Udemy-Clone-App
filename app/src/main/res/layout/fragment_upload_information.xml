<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/title"
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_asterisk"
            app:layout_constraintBottom_toTopOf="@id/txt_course_title"
            app:layout_constraintStart_toStartOf="@id/txt_course_title"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_course_title"
            style="@style/UploadEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_title_here"
                android:inputType="text"
                android:textColor="@color/black_100"
                android:textColorHint="@color/gray_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/description"
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_asterisk"
            app:layout_constraintBottom_toTopOf="@id/txt_course_description"
            app:layout_constraintStart_toStartOf="@id/txt_course_description"
            app:layout_constraintTop_toBottomOf="@id/txt_course_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_course_description"
            style="@style/UploadEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@id/ll_upload_thumbnail"
            app:layout_constraintEnd_toEndOf="@id/txt_course_title"
            app:layout_constraintStart_toStartOf="@id/txt_course_title"
            app:layout_constraintTop_toBottomOf="@id/tv_description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_course_decription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_description_here"
                android:inputType="text"
                android:textColor="@color/black_100"
                android:textColorHint="@color/gray_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/ll_upload_thumbnail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_upload_thumbnail"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingVertical="26sp"
            app:layout_constraintEnd_toEndOf="@id/txt_course_title"
            app:layout_constraintStart_toStartOf="@id/txt_course_title"
            app:layout_constraintTop_toBottomOf="@id/txt_course_description">

            <ImageView
                android:id="@+id/iv_upload_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/ic_upload_thumbnail" />

            <LinearLayout
                android:id="@+id/ll_upload_your_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_upload_your"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_your"
                    android:textColor="@color/black_100"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_upload_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="@string/thumbnail"
                    android:textColor="@color/red_100"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_support_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="@string/support_format"
                android:textColor="@color/black_100"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/price"
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_asterisk"
            app:layout_constraintBottom_toTopOf="@id/txt_price"
            app:layout_constraintStart_toStartOf="@id/txt_price"
            app:layout_constraintTop_toBottomOf="@id/ll_upload_thumbnail" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_price"
            style="@style/UploadEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@id/txt_category"
            app:layout_constraintEnd_toStartOf="@id/txt_category"
            app:layout_constraintStart_toStartOf="@id/ll_upload_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/tv_price"
            app:layout_constraintVertical_chainStyle="packed">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_course_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_price_here"
                android:inputType="number"
                android:textColor="@color/black_100"
                android:textColorHint="@color/gray_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/category"
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/txt_category"
            app:layout_constraintStart_toStartOf="@id/txt_category"
            app:layout_constraintTop_toBottomOf="@id/ll_upload_thumbnail" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_category"
            style="@style/UploadDropEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="@id/ll_upload_thumbnail"
            app:layout_constraintStart_toEndOf="@id/txt_price"
            app:layout_constraintTop_toTopOf="@id/txt_price"
            app:layout_constraintVertical_chainStyle="packed">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/et_course_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select"
                android:textColor="@color/black_100"
                android:textColorHint="@color/gray_100"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_hashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/hashtag"
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/txt_hashtag"
            app:layout_constraintStart_toStartOf="@id/txt_hashtag"
            app:layout_constraintTop_toBottomOf="@id/txt_price" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_hashtag"
            style="@style/UploadDropEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:endIconMode="none"
            app:layout_constraintBottom_toTopOf="@id/btn_submit"
            app:layout_constraintEnd_toEndOf="@id/txt_category"
            app:layout_constraintStart_toStartOf="@id/ll_upload_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/tv_hashtag"
            app:layout_constraintVertical_chainStyle="packed">

            <androidx.appcompat.widget.AppCompatMultiAutoCompleteTextView
                android:id="@+id/et_course_hashtags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_hashtag"
                android:textColor="@color/black_100"
                android:textColorHint="@color/gray_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_submit"
            style="@style/AppYellowButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:paddingVertical="12dp"
            android:text="@string/submit"
            android:textColor="@color/black_100"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_hashtag"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
