<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_video_title"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            android:textColorHint="@color/black_100"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/text_box_stroke_color"
            app:boxStrokeErrorColor="@color/red_100"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:errorIconDrawable="@drawable/ic_force_input"
            app:errorTextColor="@color/red_100"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/black_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8"
            app:placeholderText="@string/enter_title_here"
            app:placeholderTextColor="@color/gray_100">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/black_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--            <jp.wasabeef.richeditor.RichEditor-->
        <!--                android:id="@+id/rich_edit_video_description"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                app:layout_constraintTop_toBottomOf="@id/txt_video_title"-->
        <!--                app:layout_constraintStart_toStartOf="parent"-->
        <!--                app:layout_constraintEnd_toEndOf="parent"-->
        <!--                />-->

        <View
            android:id="@+id/rich_edit_video_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/txt_video_title"
            app:layout_constraintStart_toStartOf="@id/txt_video_title"
            app:layout_constraintTop_toBottomOf="@id/txt_video_title" />

        <LinearLayout
            android:id="@+id/ll_upload_thumbnail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_upload_thumbnail"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingVertical="26sp"
            app:layout_constraintEnd_toEndOf="@id/txt_video_title"
            app:layout_constraintStart_toStartOf="@id/txt_video_title"
            app:layout_constraintTop_toBottomOf="@id/rich_edit_video_description">

            <ImageView
                android:id="@+id/iv_upload_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/ic_upload_thumbnail" />

            <LinearLayout
                android:id="@+id/ll_upload_your_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_upload_your"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_your"
                    android:textColor="@color/black_100"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_upload_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="@string/thumbnail"
                    android:textColor="@color/red_100"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_support_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="@string/support_format"
                android:textColor="@color/black_100"
                android:textSize="12sp" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_price"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/price"
            android:textColorHint="@color/black_100"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/text_box_stroke_color"
            app:boxStrokeErrorColor="@color/red_100"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:errorIconDrawable="@drawable/ic_force_input"
            app:errorTextColor="@color/red_100"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/black_100"
            app:layout_constraintBottom_toTopOf="@id/txt_category"
            app:layout_constraintEnd_toEndOf="@id/ll_upload_thumbnail"
            app:layout_constraintStart_toStartOf="@id/ll_upload_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/ll_upload_thumbnail"
            app:layout_constraintVertical_chainStyle="packed"
            app:placeholderText="@string/enter_price_here"
            app:placeholderTextColor="@color/gray_100">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_category"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/category"
            android:textColorHint="@color/black_100"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/text_box_stroke_color"
            app:boxStrokeErrorColor="@color/red_100"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:errorIconDrawable="@drawable/ic_force_input"
            app:errorTextColor="@color/red_100"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/black_100"
            app:layout_constraintBottom_toTopOf="@id/txt_hashtag"
            app:layout_constraintEnd_toEndOf="@id/txt_price"
            app:layout_constraintStart_toStartOf="@id/txt_price"
            app:layout_constraintTop_toBottomOf="@id/txt_price"
            app:layout_constraintVertical_chainStyle="packed"
            app:placeholderText="@string/select_category"
            app:placeholderTextColor="@color/gray_100">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_100"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_hashtag"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/hashtag"
            android:textColorHint="@color/black_100"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/text_box_stroke_color"
            app:boxStrokeErrorColor="@color/red_100"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:endIconMode="none"
            app:errorIconDrawable="@drawable/ic_force_input"
            app:errorTextColor="@color/red_100"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/black_100"
            app:layout_constraintBottom_toTopOf="@id/btn_submit"
            app:layout_constraintEnd_toEndOf="@id/txt_category"
            app:layout_constraintStart_toStartOf="@id/txt_category"
            app:layout_constraintTop_toBottomOf="@id/txt_category"
            app:layout_constraintVertical_chainStyle="packed"
            app:placeholderText="@string/select_hashtag"
            app:placeholderTextColor="@color/gray_100">

            <androidx.appcompat.widget.AppCompatMultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/black_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_submit"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/yellow_100"
            android:elevation="2dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingVertical="12dp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/black_100"
            android:textSize="16sp"
            app:cornerRadius="@dimen/button_and_textbox_radius"
            app:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_hashtag"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8"
            app:strokeWidth="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
