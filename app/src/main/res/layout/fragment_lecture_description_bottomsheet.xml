<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cs_lecture_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet">

    <ImageView
        android:id="@+id/iv_pull_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/ic_pull_bar"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@integer/int_0" />

    <TextView
        android:id="@+id/tv_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:fontFamily="@font/rubik_medium"
        android:text="@string/description"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_pull_bar" />

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:minWidth="@dimen/dimen_48dp"
        android:minHeight="@dimen/dimen_48dp"
        android:padding="@dimen/dimen_2dp"
        android:src="@drawable/button_close"
        app:layout_constraintBottom_toBottomOf="@id/tv_description_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_description_title" />

    <View
        android:id="@+id/v_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/tv_description_title" />

    <TextView
        android:id="@+id/tv_lecture_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@integer/int_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_divider1"
        tools:text="OKEOKEOKE afdhfba kjdfb jkabdl jkabldfkjb alkjdb lkajdbfl kjabdlfkjabslfkj baksd flk na;sdlfn;kla nd;lkfn;lakn;dkfn" />

    <TextView
        android:id="@+id/tv_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:maxLines="1"
        android:text="0"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_like"
        app:layout_constraintEnd_toEndOf="@id/tv_like"
        app:layout_constraintStart_toStartOf="@id/tv_like"
        app:layout_constraintTop_toBottomOf="@id/tv_lecture_title"
        tools:text="16K" />

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_regular"
        android:text="@string/likes"
        android:textColor="@color/gray_400"
        app:layout_constraintEnd_toStartOf="@+id/tv_views"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_like_count" />

    <TextView
        android:id="@+id/tv_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="0"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_like_count"
        app:layout_constraintEnd_toEndOf="@id/tv_views"
        app:layout_constraintStart_toStartOf="@id/tv_views"
        app:layout_constraintTop_toTopOf="@id/tv_like_count"
        tools:text="123" />

    <TextView
        android:id="@+id/tv_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_regular"
        android:text="@string/views"
        android:textColor="@color/gray_400"
        app:layout_constraintEnd_toStartOf="@+id/tv_publish_year"
        app:layout_constraintStart_toEndOf="@id/tv_like"
        app:layout_constraintTop_toBottomOf="@id/tv_view_count" />

    <TextView
        android:id="@+id/tv_publish_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_view_count"
        app:layout_constraintEnd_toEndOf="@id/tv_publish_year"
        app:layout_constraintStart_toStartOf="@id/tv_publish_year"
        app:layout_constraintTop_toTopOf="@id/tv_view_count"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Jul 29" />

    <TextView
        android:id="@+id/tv_publish_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/gray_400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_views"
        app:layout_constraintTop_toBottomOf="@id/tv_publish_day"
        tools:text="2022" />

    <View
        android:id="@+id/v_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/tv_like" />

    <WebView
        android:id="@+id/wv_lecture_description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_divider2" />

</androidx.constraintlayout.widget.ConstraintLayout>
