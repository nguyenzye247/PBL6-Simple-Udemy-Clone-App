<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/bg_forms"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="7dp"
                android:src="@drawable/button_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/tv_forgot_your_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/forgot_your_password"
                android:textColor="@color/text_and_common_logo_color"
                android:textSize="26sp"
                app:layout_constraintBottom_toTopOf="@id/tv_enter_registered_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_close"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_enter_registered_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_regular"
                android:includeFontPadding="false"
                android:text="@string/enter_registered_email_request"
                android:textAlignment="center"
                android:textColor="@color/text_light_black_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/iv_sent_email"
                app:layout_constraintEnd_toEndOf="@id/tv_forgot_your_password"
                app:layout_constraintStart_toStartOf="@id/tv_forgot_your_password"
                app:layout_constraintTop_toBottomOf="@id/tv_forgot_your_password"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/iv_sent_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:contentDescription="@null"
                android:src="@drawable/image_sent_email"
                app:layout_constraintBottom_toTopOf="@id/txt_email"
                app:layout_constraintEnd_toEndOf="@id/tv_enter_registered_email"
                app:layout_constraintStart_toStartOf="@id/tv_enter_registered_email"
                app:layout_constraintTop_toBottomOf="@id/tv_enter_registered_email"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="@string/email"
                android:textColorHint="@color/text_and_common_logo_color"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/selected_keppel_blue"
                app:boxStrokeErrorColor="@color/red_error"
                app:errorIconDrawable="@null"
                app:errorTextAppearance="@style/MyZeroSizeTextAppearance"
                app:errorTextColor="@color/red_error"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/selected_keppel_blue"
                app:layout_constraintBottom_toTopOf="@id/btn_send"
                app:layout_constraintEnd_toEndOf="@id/iv_sent_email"
                app:layout_constraintStart_toStartOf="@id/iv_sent_email"
                app:layout_constraintTop_toBottomOf="@id/iv_sent_email"
                app:layout_constraintVertical_chainStyle="packed"
                app:placeholderText="@string/example_email"
                app:placeholderTextColor="@color/text_dim_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_and_common_logo_color"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_send"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_and_textbox_height"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/yellow_button_color"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/text_and_common_logo_color"
                android:textSize="16sp"
                app:cornerRadius="@dimen/button_and_textbox_radius"
                app:elevation="2dp"
                app:layout_constraintBottom_toTopOf="@id/tv_remember_password"
                app:layout_constraintEnd_toEndOf="@id/txt_email"
                app:layout_constraintStart_toStartOf="@id/txt_email"
                app:layout_constraintTop_toBottomOf="@id/txt_email"
                app:layout_constraintVertical_chainStyle="packed"
                app:strokeWidth="0dp" />

            <TextView
                android:id="@+id/tv_remember_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/remember_password"
                android:textColor="@color/text_light_black_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/btn_send"
                app:layout_constraintEnd_toStartOf="@id/tv_sign_in"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/btn_send"
                app:layout_constraintTop_toBottomOf="@id/btn_send"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/rubik_medium"
                android:padding="5dp"
                android:text="@string/sign_in"
                android:textColor="@color/text_clickable_color"
                app:layout_constraintBottom_toBottomOf="@id/tv_remember_password"
                app:layout_constraintEnd_toEndOf="@id/btn_send"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/tv_remember_password"
                app:layout_constraintTop_toTopOf="@id/tv_remember_password" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>