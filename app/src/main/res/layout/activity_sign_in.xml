<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/bg_forms"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="7dp"
                android:src="@drawable/button_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_logo_yellow"
                app:layout_constraintBottom_toTopOf="@id/tv_sign_up_for_account"
                app:layout_constraintEnd_toStartOf="@id/iv_app_name"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_close"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/iv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:contentDescription="@null"
                android:src="@drawable/label_app_name"
                app:layout_constraintBottom_toBottomOf="@id/iv_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_logo"
                app:layout_constraintTop_toTopOf="@id/iv_logo" />

            <TextView
                android:id="@+id/tv_sign_up_for_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_medium"
                android:paddingHorizontal="5dp"
                android:text="@string/sign_up_for_an_account"
                android:textAlignment="center"
                android:textColor="@color/text_and_common_logo_color"
                android:textSize="26sp"
                app:layout_constraintBottom_toTopOf="@id/btn_sign_up_google"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_logo" />

            <Button
                android:id="@+id/btn_sign_up_google"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_and_textbox_height"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/sign_up_with_google"
                android:textAllCaps="false"
                android:textColor="@color/text_and_common_logo_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/button_and_textbox_radius"
                app:elevation="2dp"
                app:icon="@drawable/ic_google_logo"
                app:iconGravity="textStart"
                app:iconPadding="10dp"
                app:iconTint="@color/text_and_common_logo_color"
                app:layout_constraintBottom_toTopOf="@id/tv_or"
                app:layout_constraintEnd_toEndOf="@id/tv_sign_up_for_account"
                app:layout_constraintStart_toStartOf="@id/tv_sign_up_for_account"
                app:layout_constraintTop_toBottomOf="@id/tv_sign_up_for_account"
                app:rippleColor="@color/click_white_ripple_color"
                app:strokeColor="@color/box_outline_color"
                app:strokeWidth="1dp" />

            <View
                android:id="@+id/divider_first"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/box_outline_color"
                app:layout_constraintBottom_toBottomOf="@id/tv_or"
                app:layout_constraintEnd_toStartOf="@id/tv_or"
                app:layout_constraintStart_toStartOf="@id/btn_sign_up_google"
                app:layout_constraintTop_toTopOf="@id/tv_or" />

            <TextView
                android:id="@+id/tv_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/rubik_regular"
                android:padding="10dp"
                android:text="@string/or"
                android:textColor="@color/text_and_common_logo_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/txt_email"
                app:layout_constraintEnd_toEndOf="@id/btn_sign_up_google"
                app:layout_constraintStart_toStartOf="@id/btn_sign_up_google"
                app:layout_constraintTop_toBottomOf="@id/btn_sign_up_google" />

            <View
                android:id="@+id/divider_second"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/box_outline_color"
                app:layout_constraintBottom_toBottomOf="@id/tv_or"
                app:layout_constraintEnd_toEndOf="@id/btn_sign_up_google"
                app:layout_constraintStart_toEndOf="@id/tv_or"
                app:layout_constraintTop_toTopOf="@id/tv_or" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/email"
                android:textColorHint="@color/text_and_common_logo_color"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/selected_keppel_blue"
                app:boxStrokeErrorColor="@color/red_error"
                app:errorIconDrawable="@null"
                app:errorTextAppearance="@style/MyZeroSizeTextAppearance"
                app:errorTextColor="@color/red_error"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/selected_keppel_blue"
                app:layout_constraintBottom_toTopOf="@id/txt_password"
                app:layout_constraintEnd_toEndOf="@id/divider_second"
                app:layout_constraintStart_toStartOf="@id/divider_first"
                app:layout_constraintTop_toBottomOf="@id/tv_or"
                app:layout_constraintVertical_chainStyle="packed"
                app:placeholderText="@string/example_email"
                app:placeholderTextColor="@color/text_dim_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_and_common_logo_color"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/password"
                android:textColorHint="@color/text_and_common_logo_color"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/selected_keppel_blue"
                app:boxStrokeErrorColor="@color/red_error"
                app:endIconMode="password_toggle"
                app:errorIconDrawable="@null"
                app:errorTextColor="@color/red_error"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/selected_keppel_blue"
                app:layout_constraintBottom_toTopOf="@id/tv_forgot_password"
                app:layout_constraintEnd_toEndOf="@id/txt_email"
                app:layout_constraintStart_toStartOf="@id/txt_email"
                app:layout_constraintTop_toBottomOf="@id/txt_email"
                app:layout_constraintVertical_chainStyle="packed"
                app:passwordToggleDrawable="@drawable/selector_show_hide_password"
                app:passwordToggleEnabled="true"
                app:placeholderText="@string/password_placeholder"
                app:placeholderTextColor="@color/text_dim_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:inputType="textPassword"
                    android:textColor="@color/text_and_common_logo_color"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/rubik_medium"
                android:padding="5dp"
                android:text="@string/forgot_password"
                android:textColor="@color/text_clickable_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/btn_sign_in"
                app:layout_constraintStart_toStartOf="@id/txt_password"
                app:layout_constraintTop_toBottomOf="@id/txt_password"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/btn_sign_in"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_and_textbox_height"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/yellow_button_color"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="@color/text_and_common_logo_color"
                android:textSize="16sp"
                app:cornerRadius="@dimen/button_and_textbox_radius"
                app:elevation="2dp"
                app:layout_constraintBottom_toTopOf="@id/tv_dont_have_account"
                app:layout_constraintEnd_toEndOf="@id/txt_password"
                app:layout_constraintStart_toStartOf="@id/txt_password"
                app:layout_constraintTop_toBottomOf="@id/tv_forgot_password"
                app:layout_constraintVertical_chainStyle="packed"
                app:strokeWidth="0dp" />

            <TextView
                android:id="@+id/tv_dont_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/have_not_had_any_account"
                android:textColor="@color/text_and_common_logo_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_sign_up"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/btn_sign_in"
                app:layout_constraintTop_toBottomOf="@id/btn_sign_in"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/rubik_medium"
                android:padding="5dp"
                android:text="@string/sign_up"
                android:textColor="@color/text_clickable_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_dont_have_account"
                app:layout_constraintEnd_toEndOf="@id/btn_sign_in"
                app:layout_constraintStart_toEndOf="@id/tv_dont_have_account"
                app:layout_constraintTop_toTopOf="@id/tv_dont_have_account" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>