<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="@dimen/dimen_36dp"
        android:layout_height="@dimen/dimen_36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_user_full_name"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@integer/int_0"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:maxLines="1"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_15sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/tv_comment_content"
        app:layout_constraintEnd_toStartOf="@id/iv_dot"
        app:layout_constraintHorizontal_bias="@integer/int_0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/iv_user_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_user_avatar"
        tools:text="Le Nguyen" />

    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_dot"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_full_name"
        app:layout_constraintEnd_toStartOf="@id/tv_comment_created_at"
        app:layout_constraintStart_toEndOf="@id/tv_user_full_name"
        app:layout_constraintTop_toTopOf="@id/tv_user_full_name" />

    <TextView
        android:id="@+id/tv_comment_created_at"
        style="@style/TextFontRubikRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_full_name"
        app:layout_constraintStart_toEndOf="@id/iv_dot"
        app:layout_constraintTop_toTopOf="@id/tv_user_full_name"
        tools:text="4mo ago" />

    <TextView
        android:id="@+id/tv_comment_content"
        style="@style/TextFontRubikRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:textColor="@color/gray_400"

        android:textSize="@dimen/dimen_14sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@integer/int_0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/tv_user_full_name"
        app:layout_constraintTop_toBottomOf="@id/tv_user_full_name"
        tools:text="Why my tears could drop" />

</androidx.constraintlayout.widget.ConstraintLayout>
