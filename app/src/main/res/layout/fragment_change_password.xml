<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_old_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/old_password"
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_asterisk"
            app:layout_constraintBottom_toTopOf="@id/txt_old_password"
            app:layout_constraintStart_toStartOf="@id/txt_old_password"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_old_password"
            style="@style/UploadEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_old_password_title"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.85"
            app:passwordToggleDrawable="@drawable/selector_show_hide_password"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/enter_your_old_password_here"
                android:inputType="textPassword"
                android:textColor="@color/black_100"
                android:textColorHint="@color/gray_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_new_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/new_password"
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_asterisk"
            app:layout_constraintBottom_toTopOf="@id/txt_new_password"
            app:layout_constraintStart_toStartOf="@id/txt_old_password"
            app:layout_constraintTop_toBottomOf="@id/txt_old_password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_new_password"
            style="@style/UploadEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_new_password_title"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.85"
            app:passwordToggleDrawable="@drawable/selector_show_hide_password"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/enter_your_new_password_here"
                android:inputType="textPassword"
                android:textColor="@color/black_100"
                android:textColorHint="@color/gray_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/password_confirmation"
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_asterisk"
            app:layout_constraintBottom_toTopOf="@id/txt_confirm_password"
            app:layout_constraintStart_toStartOf="@id/txt_old_password"
            app:layout_constraintTop_toBottomOf="@id/txt_new_password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_confirm_password"
            style="@style/UploadEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_title"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.85"
            app:passwordToggleDrawable="@drawable/selector_show_hide_password"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_new_password_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/enter_your_new_password_again"
                android:inputType="textPassword"
                android:textColor="@color/black_100"
                android:textColorHint="@color/gray_100"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_submit"
            style="@style/AppYellowButtonStyle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:paddingVertical="@dimen/dimen_12dp"
            android:text="@string/change"
            android:textColor="@color/black_100"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_confirm_password"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.8" />

        <ProgressBar
            android:id="@+id/progress_bar_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/yellow_100"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
