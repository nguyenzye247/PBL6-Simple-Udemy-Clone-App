<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fitsSystemWindows="true"
        app:elevation="@dimen/dimen_0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapse_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedTitleTextAppearance="@style/CourseCollapseTitleAppearance"
            app:contentScrim="@color/yellow_100"
            app:expandedTitleTextAppearance="@style/CourseExpandTitleAppearance"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleCollapseMode="scale">

            <ImageView
                android:id="@+id/iv_course_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_280dp"
                android:contentDescription="@null"
                app:layout_collapseMode="parallax" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_section_count"
                    android:layout_width="21dp"
                    android:layout_height="19dp"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_section_fill"
                    app:layout_constraintBottom_toTopOf="@id/iv_on_demand_video"
                    app:layout_constraintEnd_toStartOf="@id/tv_section_count"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@id/iv_on_demand_video"
                    app:tint="@color/gray_200" />

                <TextView
                    android:id="@+id/tv_section_count"
                    style="@style/TextFontRubikRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:textColor="@color/black_100"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_section_count"
                    app:layout_constraintEnd_toStartOf="@id/tv_sections_text"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/iv_section_count"
                    app:layout_constraintTop_toTopOf="@id/iv_section_count"
                    tools:text="3" />

                <TextView
                    android:id="@+id/tv_sections_text"
                    style="@style/TextFontRubikRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:text="@string/sections"
                    android:textColor="@color/black_100"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_section_count"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/tv_section_count"
                    app:layout_constraintTop_toTopOf="@id/tv_section_count" />

                <ImageView
                    android:id="@+id/iv_on_demand_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_play_video"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_on_demand_hours"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="@color/gray_200" />

                <TextView
                    android:id="@+id/tv_on_demand_hours"
                    style="@style/TextFontRubikRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:textColor="@color/black_100"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_on_demand_video"
                    app:layout_constraintEnd_toStartOf="@id/tv_on_demand_video"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/iv_on_demand_video"
                    app:layout_constraintTop_toTopOf="@id/iv_on_demand_video"
                    tools:text="11" />

                <TextView
                    android:id="@+id/tv_on_demand_video"
                    style="@style/TextFontRubikRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:text="@string/on_demand_video"
                    android:textColor="@color/black_100"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_on_demand_hours"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/tv_on_demand_hours"
                    app:layout_constraintTop_toTopOf="@id/tv_on_demand_hours" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_course"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include
            android:id="@+id/content_layout"
            layout="@layout/content_course_detail" />

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_enroll_course"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:elevation="@dimen/dimen_5dp"
        android:gravity="center"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/enroll"
        android:textAllCaps="false"
        android:textColor="@color/selector_enroll_button_text"
        android:textSize="16sp"
        app:backgroundTint="@color/selector_enroll_button"
        app:cornerRadius="@dimen/dimen_48dp"
        app:elevation="2dp"
        app:layout_anchor="@id/app_bar_course"
        app:layout_anchorGravity="bottom|end"
        app:strokeWidth="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fr_success_purchase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_550"
        android:elevation="@dimen/dimen_6dp"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ani_success_purchase"
            android:layout_width="@dimen/dimen_160dp"
            android:layout_height="@dimen/dimen_160dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_repeatCount="1"
            app:lottie_url="https://assets1.lottiefiles.com/packages/lf20_atippmse.json" />

        <TextView
            android:id="@+id/tv_purchase_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_28dp"
            android:text="@string/purchase_success"
            android:textColor="@color/black_100"
            android:textSize="@dimen/dimen_24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ani_success_purchase" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fr_fail_purchase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_550"
        android:elevation="@dimen/dimen_6dp"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ani_fail_purchase"
            android:layout_width="@dimen/dimen_160dp"
            android:layout_height="@dimen/dimen_160dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_repeatCount="1"
            app:lottie_url="https://assets9.lottiefiles.com/packages/lf20_pqpmxbxp.json" />

        <TextView
            android:id="@+id/tv_fail_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_28dp"
            android:text="@string/fail_to_purchase"
            android:textColor="@color/black_100"
            android:textSize="@dimen/dimen_24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ani_fail_purchase" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
