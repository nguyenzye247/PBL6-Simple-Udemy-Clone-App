<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_top_background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/background_yellow_top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="375:214"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/iv_navigation_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginHorizontal="9dp"
                android:contentDescription="@null"
                android:padding="10dp"
                android:src="@drawable/ic_navigation_menu"
                app:layout_constraintBottom_toBottomOf="@id/txt_search"
                app:layout_constraintEnd_toStartOf="@id/txt_search"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_search" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_search"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:hintAnimationEnabled="false"
                app:boxBackgroundColor="@color/background_search_box"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomEnd="30dp"
                app:boxCornerRadiusBottomStart="30dp"
                app:boxCornerRadiusTopEnd="30dp"
                app:hintEnabled="false"
                app:expandedHintEnabled="false"
                app:boxCornerRadiusTopStart="30dp"
                android:textAlignment="textStart"
                app:boxStrokeColor="@color/transparent"
                app:boxStrokeWidth="0dp"
                app:layout_constraintWidth_percent="0.45"
                app:boxStrokeWidthFocused="0dp"
                app:endIconDrawable="@drawable/ic_search"
                app:endIconMode="custom"
                app:endIconTint="#3d3d3d"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/iv_navigation_menu"
                app:layout_constraintEnd_toStartOf="@id/iv_notification"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:hint="@string/search"
                    android:textColorHint="@color/text_dim2_color"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="@color/text_and_common_logo_color"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_notification_inactive"
                app:layout_constraintBottom_toBottomOf="@id/txt_search"
                app:layout_constraintEnd_toStartOf="@id/iv_upload"
                app:layout_constraintTop_toTopOf="@id/txt_search" />

            <ImageView
                android:id="@+id/iv_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_upload"
                app:layout_constraintBottom_toBottomOf="@id/iv_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_notification" />

            <TextView
                android:id="@+id/tv_live_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubik_regular"
                android:paddingVertical="6dp"
                android:text="@string/recent_videos"
                android:textColor="@color/text_and_common_logo_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/rv_live_videos"
                app:layout_constraintStart_toStartOf="@id/iv_navigation_menu"
                app:layout_constraintTop_toBottomOf="@id/iv_navigation_menu" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_live_videos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/tv_popular_videos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_live_videos"
                app:layout_constraintTop_toBottomOf="@id/tv_live_videos" />

            <TextView
                android:id="@+id/tv_popular_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rubik_regular"
                android:paddingVertical="6dp"
                android:text="@string/popular_videos"
                android:textColor="@color/text_and_common_logo_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/rv_popular_videos"
                app:layout_constraintStart_toStartOf="@id/tv_live_videos"
                app:layout_constraintTop_toBottomOf="@id/rv_live_videos" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_popular_videos"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:paddingVertical="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/rv_live_videos"
                app:layout_constraintStart_toStartOf="@id/rv_live_videos"
                app:layout_constraintTop_toBottomOf="@id/tv_popular_videos"
                app:layout_constraintVertical_bias="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_logo_yellow"
                    app:layout_constraintBottom_toTopOf="@id/tv_menu_title"
                    app:layout_constraintEnd_toStartOf="@id/iv_app_name"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@null"
                    android:src="@drawable/label_app_name"
                    app:layout_constraintBottom_toBottomOf="@id/iv_logo"
                    app:layout_constraintEnd_toStartOf="@id/iv_close_nav"
                    app:layout_constraintStart_toEndOf="@id/iv_logo"
                    app:layout_constraintTop_toTopOf="@id/iv_logo" />

                <ImageView
                    android:id="@+id/iv_close_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:contentDescription="@null"
                    android:padding="5dp"
                    android:src="@drawable/ic_arrow_left"
                    app:layout_constraintBottom_toBottomOf="@id/iv_app_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/iv_app_name"
                    app:layout_constraintTop_toTopOf="@id/iv_app_name" />

                <TextView
                    android:id="@+id/tv_menu_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="10dp"
                    app:layout_constraintBottom_toTopOf="@id/btn_home_page"
                    android:paddingEnd="0dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="@string/menu"
                    android:textColor="@color/text_and_common_logo_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/iv_logo"
                    app:layout_constraintTop_toBottomOf="@id/iv_logo" />

                <Button
                    android:id="@+id/btn_home_page"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/yellow_button_color"
                    android:fontFamily="@font/rubik_medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/home_page"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/text_and_common_logo_color"
                    android:textSize="16sp"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/ic_home"
                    app:iconPadding="10dp"
                    app:iconTint="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_menu_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
