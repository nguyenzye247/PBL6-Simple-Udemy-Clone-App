<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom">

        <ImageView
            android:id="@+id/iv_top_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/background_yellow_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="375:214"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/yellow_195"
        android:visibility="visible"
        app:elevation="0dp"
        app:layout_dodgeInsetEdges="none">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center_vertical|start"
            android:paddingStart="@dimen/dimen_16dp"
            android:paddingEnd="@dimen/dimen_0dp"
            android:clickable="false"
            app:contentInsetStartWithNavigation="@dimen/dimen_0dp"
            app:menu="@menu/menu_toolbar_main"
            app:navigationContentDescription="@string/logo_description"
            app:navigationIcon="@drawable/ic_official_logo_text_small"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_2dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/white_100"
        app:contentInsetStart="0dp"
        app:fabAlignmentMode="end"
        app:fabCradleMargin="12dp"
        app:fabCradleRoundedCornerRadius="36dp"
        app:fabCradleVerticalOffset="0dp"
        app:hideOnScroll="true">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:itemIconTint="@color/bottom_bar_item_color"
            app:itemRippleColor="@color/yellow_300"
            app:itemTextAppearanceActive="@style/BottomActiveNavTextAppearance"
            app:itemTextAppearanceInactive="@style/BottomInactiveNavTextAppearance"
            app:itemTextColor="@color/bottom_bar_item_color"
            app:labelVisibilityMode="selected"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:menu="@menu/menu_home_bottom" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_fab_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/upload"
        android:src="@drawable/ic_upload"
        app:backgroundTint="@color/yellow_100"
        app:elevation="8dp"
        app:layout_anchor="@id/bottom_bar_main"
        app:layout_anchorGravity="top"
        app:layout_behavior=".widget.FabBehavior"
        app:rippleColor="@color/yellow_200"
        app:tint="@color/white_300" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
