<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_course_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_22sp"
        app:layout_constraintBottom_toTopOf="@id/tv_course_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="$12.44" />

    <TextView
        android:id="@+id/tv_course_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/bg_course_category"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingVertical="@dimen/dimen_8dp"
        android:text="@string/unknown"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_course_title"
        app:layout_constraintStart_toStartOf="@id/tv_course_price"
        app:layout_constraintTop_toBottomOf="@id/tv_course_price" />

    <TextView
        android:id="@+id/tv_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_20sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/rt_stars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_course_category"
        tools:text="The Complete Android 12 and Kotlin Development Masterclass" />

    <TextView
        android:id="@+id/rt_stars_point"
        style="@style/TextFontRubikMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:textColor="@color/yellow_100"
        android:textSize="@dimen/dimen_18sp"
        app:layout_constraintBottom_toBottomOf="@id/rt_stars"
        app:layout_constraintEnd_toStartOf="@id/rt_stars"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/tv_course_title"
        app:layout_constraintTop_toTopOf="@id/rt_stars" />

    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/rt_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:numStars="5"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/tv_created_by"
        app:layout_constraintEnd_toStartOf="@id/tv_student_count"
        app:layout_constraintStart_toEndOf="@id/rt_stars_point"
        app:layout_constraintTop_toBottomOf="@id/tv_course_title"
        app:srb_isIndicator="true"
        app:srb_rating="0"
        app:srb_starHeight="@dimen/dimen_16dp"
        app:srb_starPadding="@dimen/dimen_4dp"
        app:srb_starWidth="@dimen/dimen_16dp"
        app:srb_stepSize="0.5" />

    <TextView
        android:id="@+id/tv_student_count"
        style="@style/TextFontRubikRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8dp"
        tools:text="(22,037 students)"
        android:textColor="@color/black_100"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintBottom_toBottomOf="@id/rt_stars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rt_stars"
        app:layout_constraintTop_toTopOf="@id/rt_stars" />

    <TextView
        android:id="@+id/tv_created_by"
        style="@style/TextFontRubikRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:maxLines="1"
        android:text="@string/created_by"
        android:textColor="@color/black_100"
        app:layout_constraintBottom_toTopOf="@id/cv_course_description"
        app:layout_constraintEnd_toStartOf="@id/tv_created_by_person"
        app:layout_constraintStart_toStartOf="@id/tv_course_title"
        app:layout_constraintTop_toBottomOf="@id/rt_stars" />

    <TextView
        android:id="@+id/tv_created_by_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Example Name"
        android:textColor="@color/blue_light_100"
        app:layout_constraintBottom_toBottomOf="@id/tv_created_by"
        app:layout_constraintStart_toEndOf="@id/tv_created_by"
        app:layout_constraintTop_toTopOf="@id/tv_created_by" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_course_description"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:elevation="@dimen/dimen_0dp"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:cardElevation="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@id/cv_course_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_created_by"
        app:layout_constraintTop_toBottomOf="@id/tv_created_by"
        app:layout_constraintVertical_chainStyle="packed"
        app:strokeColor="@color/gray_300"
        app:strokeWidth="@dimen/dimen_1dp">

        <LinearLayout
            android:id="@+id/ll_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_course_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="@string/description"
                android:textColor="@color/black_100"
                android:textSize="@dimen/dimen_18sp" />

            <TextView
                android:id="@+id/tv_course_description"
                style="@style/TextFontRubikRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_8dp"
                android:layout_marginVertical="@dimen/dimen_12dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/black_100"
                app:layout_constraintEnd_toEndOf="@id/tv_course_title"
                app:layout_constraintStart_toStartOf="@id/tv_course_title"
                app:layout_constraintTop_toBottomOf="@id/tv_course_description_title"
                tools:text="Do you want to become a programmer? Do you want to learn how to create games, automate your browser, visualize data, and much more? If youâ€™re looking to learn Python for the very first time or need a quick brush-up, this is the course for you!" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_course_content"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:elevation="@dimen/dimen_0dp"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:cardElevation="@dimen/dimen_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cv_course_description"
        app:layout_constraintStart_toStartOf="@id/cv_course_description"
        app:layout_constraintTop_toBottomOf="@id/cv_course_description"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        app:strokeColor="@color/gray_300"
        app:strokeWidth="@dimen/dimen_1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_course_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="@string/course_content"
                android:textColor="@color/black_100"
                android:textSize="@dimen/dimen_18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_course_sections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_8dp"
                android:layout_marginVertical="@dimen/dimen_12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_course_content" />

            <ImageView
                android:id="@+id/iv_no_course_content"
                android:layout_width="@dimen/dimen_300dp"
                android:layout_height="@dimen/dimen_300dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/image_empty" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/progress_bar_course_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/yellow_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cv_course_content" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/yellow_100"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
