<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_lecture_item">

    <TextView
        android:id="@+id/tv_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/lecture"
        android:textColor="@color/black_100"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/tv_lecture_numb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lecture_numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="@color/black_100"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_lecture"
        app:layout_constraintStart_toEndOf="@id/tv_lecture"
        app:layout_constraintTop_toTopOf="@id/tv_lecture"
        tools:text="1:" />

    <TextView
        android:id="@+id/tv_lecture_title"
        style="@style/TextFontRubikLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_100"
        android:textSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_lecture_numb"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_lecture"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_lecture_numb"
        app:layout_constraintTop_toTopOf="@id/tv_lecture_numb"
        tools:text="Activity" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_edit_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_yellow_button"
        android:foreground="?attr/selectableItemBackground"
        android:padding="4dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@id/tv_lecture_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_lecture_title" />

    <ImageView
        android:id="@+id/iv_checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_checkmark"
        app:layout_constraintStart_toStartOf="@id/tv_lecture"
        app:layout_constraintTop_toBottomOf="@id/tv_lecture"
        app:tint="@color/blue_light_100" />

    <TextView
        android:id="@+id/tv_lecture_video"
        style="@style/TextFontRubikRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/lecture_video"
        android:textColor="@color/blue_light_100"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_checkmark"
        app:layout_constraintStart_toEndOf="@id/iv_checkmark"
        app:layout_constraintTop_toTopOf="@id/iv_checkmark" />

</androidx.constraintlayout.widget.ConstraintLayout>
