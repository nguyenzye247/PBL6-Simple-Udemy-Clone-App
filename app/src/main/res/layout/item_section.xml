<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/section"
        android:textColor="@color/black_100"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/tv_section_numb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_section_numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="@color/black_100"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_section"
        app:layout_constraintStart_toEndOf="@id/tv_section"
        app:layout_constraintTop_toTopOf="@id/tv_section"
        tools:text="1:" />

    <TextView
        android:id="@+id/tv_section_title"
        style="@style/TextFontRubikLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_100"
        android:textSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_section_numb"
        app:layout_constraintEnd_toStartOf="@id/btn_expand"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_section_numb"
        app:layout_constraintTop_toTopOf="@id/tv_section_numb"
        tools:text="Android fundamental" />

    <ImageButton
        android:id="@+id/btn_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:padding="8dp"
        android:src="@drawable/ic_dropdown"
        app:layout_constraintBottom_toBottomOf="@id/tv_section_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_section_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_section_lectures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_section_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
