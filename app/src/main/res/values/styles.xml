<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyZeroSizeTextAppearance">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="MyNavigationMenuTextAppearance" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextFontRubikRegular">
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextFontRubikMedium">
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="TextFontRubikLight">
        <item name="fontFamily">@font/rubik_light</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gray_300</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="BottomActiveNavTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="itemTextColor">@color/gray_200</item>
    </style>

    <style name="BottomInactiveNavTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="itemTextColor">@color/gray_100</item>
    </style>

    <style name="CommonEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/text_box_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/red_100</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeErrorColor">@color/red_100</item>
        <item name="expandedHintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="placeholderTextColor">@color/gray_100</item>
        <item name="hintTextColor">@color/black_100</item>
    </style>

    <style name="UploadEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/text_box_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/red_100</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeErrorColor">@color/red_100</item>
    </style>

    <style name="UploadDropEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/text_box_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/red_100</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeErrorColor">@color/red_100</item>
    </style>

    <style name="AppYellowButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:elevation">2dp</item>
        <item name="android:backgroundTint">@color/button_tint_color</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dimen_8dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CourseExpandTitleAppearance">
        <item name="android:textSize">@dimen/dimen_26sp</item>
        <item name="android:textColor">@color/blue_light_100</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="CourseCollapseTitleAppearance">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>
</resources>